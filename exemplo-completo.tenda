// ====== ESTRUTURAS COMPLEXAS ======
exiba("=== Estruturas Complexas ===")

// Função com tratamento de erro
seja divide_seguro(dividendo, divisor) =
  faça
    se divisor é 0 então
      retorna { "erro": "Divisão por zero não permitida" }
    senão
      retorna { "valor": dividendo / divisor }
    fim
  fim

seja resultado = divide_seguro(10, 0)
se resultado tem "erro" então
  exiba("Erro na divisão: " + resultado.erro)
senão
  exiba("Resultado da divisão: " + resultado.valor)
fim

// ====== LAÇOS COM INTERVALOS ======
